<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/thier_message"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="name"
            android:textColor="@color/grey_light"
            />

        <RelativeLayout
            android:id="@+id/message_root_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView_message_text_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="sample" />

            <TextView
                android:id="@+id/textView_message_time_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_message_text_rec"
                android:layout_alignEnd="@id/textView_message_text_rec"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="3/15/2018 3:00 PM" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_rec"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_message"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="name"
            android:textColor="@color/grey_light"
             />

        <RelativeLayout
            android:id="@+id/message_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:padding="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="sample" />

            <TextView
                android:id="@+id/textView_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_message_text"
                android:layout_alignEnd="@id/textView_message_text"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="3/15/2018 3:00 PM" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>