<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            app:tint="@color/quantum_yellow"
            android:src="@drawable/ic_sun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Assistant "
            android:textSize="7sp"
            android:textColor="@color/quantum_yellow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="7sp"
            android:textColor="@color/grey_light"
            />

        <TextView
            android:id="@+id/client_name"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/logo"
            android:text="Message"
            android:textColor="@color/grey_light"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_job_detail_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_job_detail"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_job_detail_delivery"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_job_detail_"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_job_detail_delivery"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textStyle="normal" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_toEndOf="@+id/ll_job_detail_delivery"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/ll_job_detail_"/>
</RelativeLayout>
